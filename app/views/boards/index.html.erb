

<div>
  <div class="flex">
    <div>
      <%= render :partial => "boards", :collection => @boards %>
    </div>

    <div @click="visible = !visible" class="board-button">
      <button>新增看板</button>
    </div>
  </div>

  <div @click="visible = !visible" v-show="visible" class="w-full h-full left-0 top-0 bg-gray-500 opacity-50 fixed flex justify-center items-center">
    <div @click.stop class="w-4/12 h-56 bg-red-100 rounded">
      <div @click="visible = !visible" class="text-right cursor-pointer"><i class="fas fa-times"></i></div>
      <%= form_for @board do |board| %>
        <%= board.text_field :title, class: "h-8 w-56 border-black border-solid border-2 rounded" %>
        <%= board.submit "建立看板" %>
      <% end %>
    </div>
  </div>
</div>